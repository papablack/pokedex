{
  "name": "rws_pokedex_main",
  "version": "1.1.0",
  "author": "papablack",
  "description": "AI Powered pokedex with PokeApi connection",
  "private": true,
  "workspaces": [
    "code"
  ],
  "scripts": {
    "build": "rws build front",
    "watch": "rws build front --watch",
    "start": "node server.js",
    "dev": "node server.js",
    "preload:build": "tsc -p preload/tsconfig.json",
    "electron:build": "yarn preload:build && tsc -p electron/tsconfig.json && electron-builder",
    "electron:dev": "yarn preload:build && tsc -p electron/tsconfig.json && electron .",
    "full:build": "yarn build && yarn preload:build && tsc -p electron/tsconfig.json && electron-builder",
    "full:build:dir": "yarn build && yarn preload:build && tsc -p electron/tsconfig.json && electron-builder --dir",
    "full:dev": "yarn build && yarn preload:build && tsc -p electron/tsconfig.json && electron ."
  },
  "main": "dist/electron/main.js",
  "dependencies": {
    "express": "^5.2.1",
    "dotenv": "^16.0.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0",
    "typescript": "^5.1.6"
  },
  "build": {
    "appId": "com.rws.pokedex",
    "productName": "AI Pokedex",
    "directories": {
      "output": "dist-electron",
      "buildResources": "public"
    },
    "files": [
      "dist/electron/**/*",
      "public/**/*",
      "electron/icon.ico",
      ".env"
    ],
    "includeSubNodeModules": true,
    "extraFiles": [
      {
        "from": "public",
        "to": "public",
        "filter": ["**/*"]
      },
      {
        "from": ".env",
        "to": ".env"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "dir",
          "arch": ["x64"]
        }
      ],
      "icon": "electron/icon.ico",
      "artifactName": "${productName} Setup ${version}.${ext}"
    },
    "mac": {
      "target": "dmg",
      "icon": "electron/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "electron/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "public/favicon.ico",
      "uninstallerIcon": "public/favicon.ico",
      "artifactName": "${productName} Setup ${version}.${ext}",
      "shortcutName": "${productName}",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
